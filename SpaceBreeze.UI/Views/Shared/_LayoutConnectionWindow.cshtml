<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SpaceBreeze.UI</title>

    <!-- Uikit -->
    <link rel="stylesheet" href="~/lib/uikit-3.0.3/css/uikit.css" />
    <script src="~/lib/uikit-3.0.3/js/uikit.js"></script>
    <script src="~/lib/uikit-3.0.3/js/uikit-icons.js"></script>

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="unselectable">
    <!-- Navigation block -->
    <div class="uk-container uk-container-large uk-margin-top">
        <nav class="uk-navbar" uk-navbar>
            <div class="nav-overlay uk-navbar-right">
                <ul class="uk-iconnav">
                    <li>
                        <a class="" uk-icon="icon: search; ratio: 1.3" class="icon-scale" uk-toggle="target: .nav-overlay; animation: uk-animation-fade" href="#"></a>
                    </li>
                    <li><a href="" uk-icon="icon: list; ratio: 1.3;" class="icon-scale"></a></li>
                    <li><a href="" uk-icon="icon: git-fork; ratio: 1.3;" class="icon-scale"></a></li>
                    <li><a href="" uk-icon="icon: thumbnails; ratio: 1.3;" class="icon-scale"></a></li>
                </ul>
            </div>
            <div class="nav-overlay uk-navbar-left uk-flex-1" hidden>
                <div class="uk-width-expand">
                    <form class="uk-search uk-width-1-1">
                        <input class="uk-search-input uk-search-navbar" type="search" placeholder="Search..." autofocus>
                    </form>
                </div>
                <a class="" uk-icon="icon: close; ratio: 1.3;" uk-toggle="target: .nav-overlay; animation: uk-animation-fade" href="#"></a>
            </div>
        </nav>
        <!-- Content block -->
        <div class="uk-container uk-container-large uk-margin-top">
            @RenderBody()
        </div>
    </div>
</body>
</html>
